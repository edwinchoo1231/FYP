\begin_layout Standard
\begin_inset Formula 
\begin{equation}
x=\left[\begin{array}{c}
x_{1}\\
\vdots\\
x_{10}
\end{array}\right],Z=\left[\begin{array}{ccc}
z_{1,1} & \cdots & z_{1,10}\\
\vdots & \ddots & \vdots\\
z_{10,1} & \cdots & z_{10,10}
\end{array}\right],f=\left[\begin{array}{c}
f_{1}\\
\vdots\\
f_{10}
\end{array}\right]
\end{equation}

